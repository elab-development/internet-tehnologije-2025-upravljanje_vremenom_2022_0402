        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Registracija korisnika (regular, premium ili admin)",
                "operationId": "8a56853624e025573120a09a4c75d468",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "tip"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Jelena Vasiljević"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jelena@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "123456"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "example": "123456"
                                    },
                                    "tip": {
                                        "description": "Tip korisnika u sistemu",
                                        "type": "string",
                                        "enum": [
                                            "regular",
                                            "premium",
                                            "admin"
                                        ],
                                        "example": "regular"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Uspešna registracija"
                    },
                    "422": {
                        "description": "Validaciona greška"
                    }
                }
            }
        },
